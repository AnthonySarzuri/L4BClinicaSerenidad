<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Ventas</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">

    <!-- Header -->
    <header class="bg-blue-600 text-white p-4 shadow-md flex justify-between items-center">
        <h1 class="text-2xl font-bold">Dashboard de Ventas</h1>
        <a href="/productos" class="bg-white text-blue-600 px-4 py-2 rounded hover:bg-blue-500 hover:text-white transition duration-200">
            Productos
        </a>
    </header>

    <!-- Contenedor del gráfico -->
    <main class="container mx-auto mt-10 p-4">
        <div class="chart-container bg-white shadow-md rounded-lg p-6">
            <canvas id="ventasChart"></canvas>
        </div>
    </main>

    <script>
        // Datos simulados para el gráfico
        const ventasData = [
            { fecha: '2024-01-01', total: 150 },
            { fecha: '2024-02-01', total: 200 },
            { fecha: '2024-03-01', total: 250 },
            { fecha: '2024-04-01', total: 300 },
            { fecha: '2024-05-01', total: 350 }
        ];

        function renderChart() {
            const etiquetas = ventasData.map(venta => venta.fecha);
            const totales = ventasData.map(venta => venta.total);

            const ctx = document.getElementById('ventasChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: etiquetas,
                    datasets: [{
                        label: 'Ventas',
                        data: totales,
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        renderChart();
    </script>
</body>
</html>
