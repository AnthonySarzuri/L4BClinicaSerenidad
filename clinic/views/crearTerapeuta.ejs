<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crear Terapeuta</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      window.onload = () => {
        const fechaNacimientoInput = document.querySelector(
          'input[name="fecha_nacimiento"]'
        );
        const hoy = new Date();
        const fechaMaxima = new Date(
          hoy.getFullYear() - 18,
          hoy.getMonth(),
          hoy.getDate()
        );
        fechaNacimientoInput.max = fechaMaxima.toISOString().split("T")[0];
      };
    </script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto p-6">
      <button
        onclick="location.href='/terapeutas'"
        class="bg-yellow-600 text-white px-4 py-2 rounded hover:bg-yellow-700"
      >
        Volver
      </button>
      <h1 class="text-3xl font-bold text-center mb-6">Crear Terapeuta</h1>

      <form
        action="/terapeutas/nuevo"
        method="POST"
        enctype="multipart/form-data"
        class="bg-white p-6 shadow-md rounded-lg"
      >
        <div class="mb-4">
          <label class="block text-gray-700">Nombre:</label>
          <input
            type="text"
            name="nombre"
            required
            value="<%= nombre %>"
            class="w-full p-2 border border-gray-300 rounded"
          />
        </div>

        <div class="mb-4">
          <label class="block text-gray-700">Apellido:</label>
          <input
            type="text"
            name="apellido"
            required
            value="<%= apellido %>"
            class="w-full p-2 border border-gray-300 rounded"
          />
        </div>

        <div class="mb-4">
          <label class="block text-gray-700">Teléfono:</label>
          <input
            type="text"
            name="telefono"
            required
            onkeypress="permitirSoloNumeros(event)"
            value="<%= telefono %>"
            class="w-full p-2 border border-gray-300 rounded"
          />
        </div>

        <div class="mb-4">
          <label class="block text-gray-700">Email:</label>
          <input
            type="email"
            name="email"
            required
            value="<%= email %>"
            class="w-full p-2 border border-gray-300 rounded"
          />
        </div>

        <div class="mb-4">
          <label class="block text-gray-700">Especialidad:</label>
          <input
            type="text"
            name="especialidad"
            required
            value="<%= especialidad %>"
            class="w-full p-2 border border-gray-300 rounded"
          />
        </div>

        <div class="mb-4">
          <label class="block text-gray-700">Licencia Médica:</label>
          <input
            type="text"
            name="licencia_medica"
            required
            onkeypress="permitirSoloNumeros(event)"
            value="<%= licencia_medica %>"
            class="w-full p-2 border border-gray-300 rounded"
          />
        </div>

        <div class="mb-4">
          <label class="block text-gray-700">Fecha de Nacimiento:</label>
          <input
            type="date"
            name="fecha_nacimiento"
            required
            value="<%= fecha_nacimiento %>"
            class="w-full p-2 border border-gray-300 rounded"
          />
        </div>

        <div class="mb-4">
          <label class="block text-gray-700">Foto:</label>
          <input
            type="file"
            name="foto"
            accept="image/*"
            class="w-full p-2 border border-gray-300 rounded"
          />
        </div>

        <button
          type="submit"
          class="w-full bg-blue-600 text-white p-2 rounded hover:bg-blue-700"
        >
          Crear Terapeuta
        </button>

        <% if (error) { %>
        <p class="text-red-500 mt-4"><%= error %></p>
        <% } %>
      </form>
    </div>
  </body>
</html>
