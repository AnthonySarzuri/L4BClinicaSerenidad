<!DOCTYPE html>
<html lang="en">
    <input type="text" name="nombre" placeholder="Nombre de la Droguería" required pattern="[a-zA-Z\s]{3,}" title="El nombre debe tener al menos 3 caracteres y solo contener letras y espacios.">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Droguerías</title>
</head>
<body>
    <h1>Droguerías</h1>
    <form action="/droguerias" method="POST">
        <input type="text" name="nombre" placeholder="Nombre de la Droguería" required>
        <button type="submit">Agregar</button>
    </form>
    
    <% if (typeof errorMsg !== 'undefined') { %>
        <div style="color: red; margin-top: 10px;"><%= errorMsg %></div>
    <% } %>
    <ul>
        <% droguerias.forEach(drogueria => { %>
            <li>
                <%= drogueria.nombre %>
                <form action="/droguerias/<%= drogueria.drogueria_id %>/eliminar" method="POST" style="display:inline;">
                    <button type="submit">Eliminar</button>
                </form>
            </li>
        <% }) %>
    </ul>

    <a href="/productos">Ver Productos</a>
</body>
</html>
